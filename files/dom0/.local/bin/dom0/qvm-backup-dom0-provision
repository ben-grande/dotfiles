## qvm-backup only backs up home dir, therefore save other dirs to our home.
set -eu

source_dirs="
/etc/qubes/policy.d
/etc/qubes/backup
"

target_dir="/home/user/backup/$(date +%Y-%m-%d_%H-%M)"

for dir in ${source_dirs}; do
  mkdir -p "${target_dir}${dir}"
  cp -a "${dir}"/* "${target_dir}/${dir}"
done
