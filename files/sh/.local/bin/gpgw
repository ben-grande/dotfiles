set -eu

gpg_cmd="$(has -s qubes-gpg-client-wrapper gpg2 gpg)"

if test -z "$gpg_cmd"; then
  printf '%s\n' "Please install one of the following tools: qubes-gpg-client-wrapper, gpg2 or gpg."
  exit 1
fi

"$gpg_cmd" "$@"
